<?xml version="1.0"?>
<!DOCTYPE project SYSTEM                    "../../includes/WebTest.dtd" [
  <!ENTITY config SYSTEM               "file:../../includes/config.xml">
  <!ENTITY checkForErrors SYSTEM       "file:../../modules/errors.xml">
  <!ENTITY checkForImageGif SYSTEM     "file:../../modules/gif.xml">
]
>

<!--
  Test that lg.php returns binary data (1x1 GIF)
-->
<project name="Openads delivery - lg.php" basedir="../.." default="main">
  <import file="../../includes/init.xml"/>
  <import file="${webtest.home}/lib/taskdef.xml"/>

  <target name="main">

    <testSpec name="Run Delivery">
      &config;
      <steps>
        <invoke description="Invoke delivery file lg.php" url="/delivery/lg.php?bannerid=1&amp;zoneid=1" />
        &checkForErrors;
        &checkForImageGif;
      </steps>

    </testSpec>

</target>

</project>